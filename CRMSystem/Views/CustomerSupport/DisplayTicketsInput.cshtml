@model CRMProject.Models.SupportTicket
@{
    ViewData["Title"] = "Add Ticket";
}

<h2>Support Tickets</h2>

<a asp-action="DisplayTicketsInput" class="btn btn-primary mb-3">Add New Ticket</a>

