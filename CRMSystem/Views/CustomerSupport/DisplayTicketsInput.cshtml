        <label asp-for="Issue" class="form-label"></label>
        <input asp-for="Issue" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="IssueDescription" class="form-label"></label>
        <textarea asp-for="IssueDescription" class="form-control"></textarea>
    </div>

     <div class="mb-3">
