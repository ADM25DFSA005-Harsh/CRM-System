@model List<CRMProject.Models.SupportTicket>
@{
    ViewData["Title"] = "Support Tickets";
}

<h2>Support Tickets</h2>

<a asp-action="DisplayTicketsInput" class="btn btn-primary mb-3">Add New Ticket</a>

<form asp-action="DisplayInTableForm" method="get" class="mb-3 d-flex gap-2">
    <input type="number" name="SearchById" class="form-control w-25" placeholder="Search by Customer ID" />

    <select name="statusFilter" class="form-select w-25">
        <option value="">-- Filter by Status --</option>
        <option value="Documents Required">Documents Required</option>
        <option value="Pending">Pending</option>
        <option value="Resolved">Resolved</option>
    </select>

    <button type="submit" class="btn btn-primary">Search & Filter</button>
</form>



<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Customer ID</th>
            <th>Issue Type</th>
            <th>Assigned Agent</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.CustomerID</td>
                <td>@ticket.Issue</td>
                <td>@ticket.AssignedAgent</td>
                <td>@ticket.Status</td>
                <td class="d-flex gap-2">
                    <a asp-action="EditByCustomerId" asp-route-customerId="@ticket.CustomerID" class="btn btn-warning btn-sm">Update</a>

                    <form asp-action="DeleteByCustomerId" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="customerId" value="@ticket.CustomerID" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>

                    <a asp-action="ViewTicket" asp-route-customerId="@ticket.CustomerID" class="btn btn-info btn-sm">View</a>
                </td>
            </tr>
        }
    </tbody>

</table>
