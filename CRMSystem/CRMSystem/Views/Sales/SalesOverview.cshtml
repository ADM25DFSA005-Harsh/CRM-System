@{

    ViewData["Title"] = "Sales Overview";

}
 
<style>

    .custom-btn-purple {

        background-color: #6f42c1;

        color: white;

    }

    .custom-btn-teal {

        background-color: #20c997;

        color: white;

    }
 
</style>
<link: //cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css

 
<div class="container mt-4 text-center">
<h1 class="mb-4">Sales Overview</h1>
 
    <!-- Summary Cards -->
<div class="row text-center mb-4">
<div class="col-md-3">
<div class="card bg-primary text-white">
<div class="card-body">
<h5>Total Opportunities</h5>
<h3>@ViewBag.Summary.TotalOpportunities</h3>
</div>
</div>
</div>
<div class="col-md-3">
<div class="card bg-warning text-dark">
<div class="card-body">
<h5>Closing Soon</h5>
<h3>@ViewBag.Summary.ClosingSoon</h3>
</div>
</div>
</div>
<div class="col-md-3">
<div class="card bg-success text-white">
<div class="card-body">
<h5>Won</h5>
<h3>@ViewBag.Summary.Won</h3>
</div>
</div>
</div>
<div class="col-md-3">
<div class="card bg-danger text-white">
<div class="card-body">
<h5>Lost</h5>
<h3>@ViewBag.Summary.Lost</h3>
</div>
</div>
</div>
</div>
 
    <!-- View Modules Button -->
<div class="container mt-5 text-center">
<h2 class="mb-4">Quick Navigation</h2>
<p class="lead mb-4">Access your Leads and Deals quickly</p>
 
    <div class="d-flex justify-content-center gap-4 mb-5">
<a class="btn custom-btn-purple" asp-action="LeadsList" asp-controller="Sales" title="GoToLeads">Go to Leads</a>
<a class="btn custom-btn-purple" asp-action="DealsList" asp-controller="Sales" title="GoToDeals">Go to Deals</a>
</div>
 
    <!-- Reminder -->
<div class="alert alert-info mb-4 text-center">
<strong>Reminder:</strong> @ViewBag.Reminders.Message
</div>
</div>
 
 