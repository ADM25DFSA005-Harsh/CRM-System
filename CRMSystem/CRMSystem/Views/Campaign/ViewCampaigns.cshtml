@{
}
@model IEnumerable<MarketingAutomation.Models.Campaign>

@{
    ViewData["Title"] = "Campaign List";
}
<div class="table-responsive">
            <table class="table table-bordered table-hover text-center align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Campaign ID</th>
                        <th>Campaign Name</th>
                        <th>Type</th>
                        <th>Status</th>
                        <th>Budget (₹)</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Impressions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td>@c.CampaignID</td>
                            <td class="fw-semibold">@c.CampaignName</td>
                            <td>@c.Type</td>
                            <td>
                                <span class="badge bg-@(
                                    c.Status == "Active" ? "success" :
                                    c.Status == "Scheduled" ? "info" :
                                    c.Status == "Completed" ? "dark" :
                                    "warning"
                                )">@c.Status</span>
                            </td>
                            <td>₹@c.Budget.ToString("N2")</td>
                            <td>@c.StartDate.ToString("dd MMM yyyy")</td>
                            <td>@c.EndDate.ToString("dd MMM yyyy")</td>
                            <td>@c.Impressions</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>